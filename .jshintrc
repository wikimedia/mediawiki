{
	/* Common */

	// Enforcing
	"eqeqeq": true,
	"es3": true,
	"latedef": true,
	"noarg": true,
	"nonew": true,
	"undef": true,
	"unused": true,

	/* Local */

	// FIXME: Deprecated, handle these with node-jscs instead.
	// Handled here because we still have inline overrides in some places.
	"camelcase": true,
	"nomen": true,

	// Enforcing
	"bitwise": true,
	"forin": false,
	"regexp": false,
	"strict": false,
	// Relaxing
	"laxbreak": true,
	"smarttabs": true,
	"multistr": true,
	// Environment
	"browser": true,

	"predef": [
		"mediaWiki",
		"jQuery",
		"QUnit"
	]
}
